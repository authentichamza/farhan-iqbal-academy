<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <div class="breadcrumbs" data-aos="fade-in">
      <div class="container">
        <h2>Contact Us</h2>
        <p>Est dolorum ut non facere possimus quibusdam eligendi voluptatem. Quia id aut similique quia voluptas sit quaerat debitis. Rerum omnis ipsam aperiam consequatur laboriosam nemo harum praesentium. </p>
      </div>
    </div><!-- End Breadcrumbs -->

    <!-- ======= Contact Section ======= -->
    <section id="contact" class="contact">
      <div data-aos="fade-up">
       <div style="width: 100%"><iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com/maps?width=100%25&amp;height=600&amp;hl=en&amp;q=445%20L%20Block%20Johar%20Town%20Lahore+(Farhan%20Iqbal%20Academy)&amp;t=&amp;z=15&amp;ie=UTF8&amp;iwloc=B&amp;output=embed" allowfullscreen></iframe>
      </div>

      <div class="container" data-aos="fade-up">

        <div class="row mt-5">

          <div class="col-lg-4">
            <div class="info">
              <div class="address">
                <i class="bi bi-geo-alt"></i>
                <h4>Location:</h4>
                <p>445 L-Block Johar Town, Lahore, Pakistan</p>
              </div>

              <div class="email">
                <i class="bi bi-envelope"></i>
                <h4>Email:</h4>
                <p>info@example.com</p>
              </div>

              <div class="phone">
                <i class="bi bi-phone"></i>
                <h4>Call:</h4>
                <p>+1 5589 55488 55s</p>
              </div>

            </div>

          </div>

          <div class="col-lg-8 mt-5 mt-lg-0">
            <%= form_for :contact, url: '/contacts', html: { class: "php-email-form" } do |f|%>
                <% flash.each do |type, msg| %>
                <div class="p-4 alert-success" role="alert">
                  <%= msg %>
                </div>
                <% end %>
                <% if @contact.errors.any? %>
                <div class="p-4 alert-danger" role="alert">
                  <%= @contact.errors.full_messages.first  %>
                </div>
                <% end %>
                <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
                <div class="row">
                <div class="col-md-6 form-group">
                  <%= f.text_field :name, class: 'form-control', placeholder:'Enter your Name'%>
                </div>
                <div class="col-md-6 form-group mt-3 mt-md-0">
                  <%= f.text_field :email, class: 'form-control', placeholder:'Enter a valid email address'%>
                </div>
              </div>
              <div class="form-group mt-3">
                <%= f.text_area :message, class: 'form-control', placeholder:'Enter your message' %>
              </div>
              <div class="text-center">
                <button type="submit">Send Message</button></div>
            <% end %>
          </div>
        </div>
      </div>
    </section><!-- End Contact Section -->

  </main>